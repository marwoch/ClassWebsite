<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    @RenderSection("head", false)
</head>
<body>
    <div class="container">
        <header>
            <h1>Class Website</h1>
        </header>
        <nav>
            <ul class="nav nav-pills">
                <li role="presentation" class="active">@Html.ActionLink("Home", "Index", "Home")</li>
                <li role="presentation">@Html.ActionLink("About", "About", "Home")</li>
                @if (Session["MemberID"] == null)
                {
                    <li role="presentation">@Html.ActionLink("Register", "Register", "Account")</li>
                    <li role="presentation">@Html.ActionLink("Sign-in", "Login", "Account")</li>
                }
                else
                {
                    <li role="presentation">@Html.ActionLink("Log Out", "LogOut", "Account")</li>
                    <li role="presentation">@Html.ActionLink("View Profile", "MyAccount", "Account")</li>
                }
                <li role="presentation">@Html.ActionLink("View Products", "Index", "Product")</li>
            </ul>
        </nav>
        <main>
            @RenderBody()
        </main>
        <footer>
            <p>&copy; @DateTime.Now.Year - Rennaisance Code Monkey</p>
        </footer>
    </div><!--end container-->
    <script>src = "~/Scripts/jquery-1.9.1.js"</script>
    <script>src = "~/Sripts/bootstrap.js"</script>
</body>
</html>
